{
  "version": 2,
  "functions": {
    "backend/server.js": {
      "runtime": "nodejs18.x"
    }
  },
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node@3.0.0"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build@2.0.0",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/$1"
    }
  ]
}